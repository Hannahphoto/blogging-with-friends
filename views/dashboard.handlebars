{{#if logged_in}}
    <h2>Dashboard</h2>
    <div >
    <button type="button" class="btn-primary" id="btn-newPost">New Post</button>
    </div>
    <div id="postBlog">
        <h3>Create Post: </h3>
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" required>
        <br>
        <label for="content">Content:</label>
        <br>
        <textarea id="content" name="content" rows="35" width="500px" required></textarea>
        <br>
        <button class="btn-primary" id="#btn-createPost">Create Post</button>
    </div>

    <script src="/js/dashboard.js"></script>    
{{/if}}