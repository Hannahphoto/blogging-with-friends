
<h2>Dashboard</h2>
<br>

<form id="editBlog" class="post-blog-form">
    <input type="hidden" name="blod-edit" />

    <h3>Create Post: </h3>
    <label for="post-title">Title:</label>
    <input type="text" id="title" name="title">

    <br>

    <label for="post-body">Content:</label>
    <br>

    <textarea id="content" name="content" rows="20" width="500px"></textarea>
    <br>

    <button type="submit" class="btn-primary" id="btn-editPost">Update</button>
    <button class="btn-primary" id="btn-deletePost">Delete Post</button>
</form>


<script src="/js/dashboard.js"></script>