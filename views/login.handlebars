<body>
    <div class="login-page">
        <div class="login-card">
            <h2>Login</h2>
            <br>
            <form>
                <div>
                    <label for="email-login">Email:</label>
                    <input class="form-input" type="text" id="email-login"/>
                </div>
                
                <div>
                    <label for="password-login">Password:</label>
                    <input class="form-input" type="text" id="password-login"/>
                </div>
                <div>
    
                    <button class="btn-primary" type="submit">Login</button>
                </div>
            </form>
        </div>
        <div class="signin-card">
            <h2>Sign-Up</h2>
          
            <form>
                <div>
                    <label for="username-signup">Username:</label>
                    <input class="form-input" type="text" id="username-signup"/>
                </div>
                
                <div>
                    <label for="email-signup">Email:</label>
                    <input class="form-input" type="password" id="email-signup"/>
                </div>
                
                <div>
                    <label for="password-signup">Password:</label>
                    <input class="form-input" type="password" id="password-signup"/>
                </div>
                <div>
                    <br>
                    <button class="btn-primary" type="submit" >Sign-Up</button>
                </div>
            </form>
        </div>
    </div>

    </div>
    
    <script src="/public/js/login.js"></script>
</body>
